{
  "manifest_version": 3,
  "version": "0.1.0",
  "name": "Wordle Assistant",
  "description": "A Wordle Assistant helping you solve even the most challenging days, without ruining the challenge by just giving you the answer.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://*.nytimes.com/games/wordle/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.nytimes.com/games/wordle/*"],
      "js": ["content-script.js"]
    }
  ]
}
